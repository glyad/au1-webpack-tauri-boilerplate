{
  "compileOnSave": false,
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "esnext",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "target": "es6",
    "lib": [
      "es2017",
      "dom"
    ],
    "moduleResolution": "node",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "importHelpers": true,
    "allowJs": true
  },
  "include": [
    "src",
    "test",
    "cypress"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.json",
    "**/*.config.*",
    "test/coverage-jest/**/*.*",
    "cypress.config.ts",
  ],
  "atom": {
    "rewriteTsconfig": false
  }
}